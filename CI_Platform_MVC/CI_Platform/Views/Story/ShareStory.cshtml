
@model List<Mission>

    <div class="container-fluid story">
        <h2 class="mt-4">Share Your Story</h2>
        <div id="sharestoryform">
            <div class="row mt-3 mb-4">
                <div class="col-md-4">
                    <div class="row form-header ms-1 mt-3 mb-2">Select Mission</div>
                    <select class="form-select" aria-label="Select mission">
                        <option value=0 disabled selected>Select your misssion</option>
                        @foreach (var mission in Model)
                        {
                            <option value=@mission.MissionId id=@mission.MissionId>@mission.Title</option>
                        }

                    </select>
                </div>
                <div class="col-md-4 ">
                    <div class="row form-header ms-1 mt-3 mb-2">Story Title</div>
                    <input class="form-control story_title" type="text" placeholder="Enter Story Title" aria-label="default input example">
                </div>
                <div class="col-md-4">
                    <div class="row form-header ms-1 mt-3 mb-2">Date</div>
                    <input class="form-control" id="datepicker" type="text" placeholder="Select Date">
                </div>
            </div>
            <div class="form-group" name="ckeditor">
                <label for="exampleFormControlTextarea1" class="mb-2">My Story</label>
                <textarea class="form-control" name="editor1" id="editor1" rows="10"></textarea>
            </div>

            <div class="form-group">
                <label for="exampleFormControlTextarea1" class="mb-2 mt-4">Enter Video URL</label>
                <textarea class="form-control videourl" type="text" placeholder="Enter any youtube video url" rows="3"> </textarea>
            </div>
        </div>

        <div class="row mt-3">
            <div class="dropzone d-flex flex-row" id="myDropzone">
                <div id="imagePreview" class="dz-preview">
                    <div id="previewTemplate" class="preview-container" style="margin-right:30px;">
                        <button type="button" class="btn-remove" style="display:none" data-dz-remove>
                            <img src="~/images/cross.png" />
                        </button>
                        <img class="preview" data-dz-thumbnail />
                    </div>
                </div>
            </div>

        </div>

        <div class=" d-flex flex-row justify-content-between align-items-start mt-3 mb-3">
            <button class="cancelbtn">Cancel</button>
            <div class="d-flex flex-row align-items-center">
                <button onclick="sharestory()" class="submitbtn me-2">Save</button>
                <button onclick="sharestory('PUBLISHED')" class="submitbtn">Submit</button>
            </div>
        </div> @*save submit buttons*@

    </div>@* story container*@

      @section Scripts {
          <script src="~/js/storypage.js"></script>
    }

