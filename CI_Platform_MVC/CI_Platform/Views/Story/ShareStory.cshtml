@{
Layout = null;
}

@{
var userName = Context.User.Identity.Name;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Share story</title>
  <link rel="stylesheet" href="~/css/landing.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <script src="https://kit.fontawesome.com/6761987a5f.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.css" rel="stylesheet">
</head>

<body>
  <header>
    <div class="row header">
      <div class="col d-flex flex-row justify-content-center">
        <a href="#" class="mx-1 mx-sm-4">Stories</a>
        <div class="dropdown">
          <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown">
            Policy <img src="~/images/drop-down.png" class="mx-2" />
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Action</a></li>
            <li><a class="dropdown-item" href="#">Another action</a></li>
            <li><a class="dropdown-item" href="#">Something else here</a></li>
          </ul>
        </div>
      </div>
      <div class="col p-0">
        <div class="dropdown">
          <button class="dropdown-toggle profile" type="button" data-bs-toggle="dropdown">
            <img src="~/images/user-img.png" class="profileimg" />
            <span class="mx-2 d-none d-sm-block">@userName</span>
            <img src="~/images/drop-down.png" class="mx-1 drop-down d-none d-sm-block" />
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">My Profile</a></li>
            <li><a class="dropdown-item" href="#">Help</a></li>
            <li><a class="dropdown-item" href="login.html">Logout</a></li>
          </ul>
        </div>
      </div>
    </div>


  </header>
  <div class="container-fluid story">
    <h2 class="mt-4">Share Your Story</h2>
    <form asp-action="Sharestory" method="post" enctype="multipart/form-data">
      <div class="row my-3 ">
        <div class="col-md-4">
          <div class="row form-header ms-1 mt-3">Select Mission</div>
          <select class="form-select" aria-label="Default select example">
            <option>Option1</option>

          </select>
        </div>
        <div class="col-md-4 ">
          <div class="row form-header ms-1 mt-3">Story Title</div>
          <input class="form-control" type="text" placeholder="Enter Story Title" aria-label="default input example">
        </div>
        <div class="col-md-4">
          <div class="row form-header ms-1 mt-3">Date</div>
          <input class="form-control" type="date" placeholder="Select Date">
        </div>
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">My Story</label>
        <textarea class="form-control" id="editor" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label for="exampleFormControlTextarea1">Enter Video URL</label>
        <input class="form-control" type="url" placeholder="Enter your Url" rows="3">
      </div>


      <div class="row">
        <div class="col-md-12">

          <div id="btn">
            <label for="imageUpload">Upload your Photos</label> <br>
            <label for="imageUpload" class="w-100">
              <div class="form-control w-100" id="drag"> </div>
            </label>
          </div>

          <div class="form-group">

            <input type="file" id="imageUpload" accept=".png,.jpg,.jpeg" multiple data-max-size="4000000"
              data-size-error="File size is too large!" class="form-control-file" hidden>
          </div>

        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div id="imagePreview"></div>
        </div>
      </div>

      <div class=" d-flex flex-row justify-content-between align-items-start">
        <button class="cancelbtn">Cancel</button>
        <div class="save d-flex flex-row align-items-center">
          <button class="apply-button me-2">Save</button>
          <button type="submit" class="apply-button">Submit</button>
        </div>
      </div>
    </form>

  </div>


  <footer> <a class="text-muted" style="    margin-left: 10%;
                        text-decoration: none;" asp-controller"Home" asp-action="Privacy"> Privacy policy</a></footer>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.js"></script>
  <script src="~/js/storypage.js"></script>



</body>

</html>