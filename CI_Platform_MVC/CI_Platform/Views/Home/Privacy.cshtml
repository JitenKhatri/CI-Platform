@using CI_Platform.Areas.Admin.ViewModels
@using System.Web
@{
    Layout = null;
    //var UserName = ViewBag.UserName;
    var userName = Context.User.Identity.Name;
    //var viewContext = (Microsoft.AspNetCore.Mvc.Rendering.ViewContext)PageContext;
}
@model CrudViewModel
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Privacy-Policy</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.css">
    <link href="~/css/landing.css" rel="stylesheet" />
</head>

<body>
    <div class="container-fluid p-0">
        <div class="row header">
            <div class="col d-flex flex-row justify-content-center">
                <a asp-controller="Story" asp-action="Story" style="text-decoration:none;" class="mx-1 mx-sm-4">Stories</a>
                <div class="dropdown">
                    <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Policy <img src="~/images/drop-down.png" class="mx-2" />
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy"> Privacy policy</a></li>
                    </ul>
                </div>
            </div>
            <div class="col p-0">
                <div class="dropdown">
                    <button class="dropdown-toggle profile"
                            type="button"
                            data-bs-toggle="dropdown">
                        <img src="~/images/user-img.png" class="profileimg" />
                        <span class="mx-2 d-none d-sm-block">@userName</span>
                        <img src="~/images/drop-down.png"
                             class="mx-1 drop-down d-none d-sm-block" />
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Mission" asp-action="Volunteering_Timesheet">Timesheet</a></li>
                        <li><a class="dropdown-item" asp-controller="UserAuthentication" asp-action="Logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container-fluid privacy-container">
            <h1 class="privacy-h1"> Privacy and Cookies Policy</h1>
            <div class="row">
                <div id="section-nav" class="col-md-4">
                    @{
                        int count = 0;
                        foreach (var item in @Model.CmsPages)
                        {
                            if (count == 0)
                            {
                                <div class="d-flex flex-row justify-content-between align-items-center">
                                    <a href="#@item.Slug" class="active" style="text-decoration:none; text-align:center;">@item.Title</a>
                                    <img src="~/images/right-arrow1.png" style="height:14px;margin-left:26px;" />
                                </div>
                                count++;
                            }
                            else
                            {
                                <div class="d-flex flex-row justify-content-between align-items-center">
                                    <a href="#@item.Slug" style="text-decoration:none; text-align:center;">@item.Title</a>
                                    <img src="~/images/right-arrow1.png" style="height:14px; margin-left:26px;" />
                                </div>
                                count++;
                            }
                        }
                    }

                </div>
                <div id="privacy-section" class="col-md-8">
                    @{
                        foreach (var item in Model.CmsPages)
                        {
                            <section id="@item.Slug">
                                <h2>@item.Title</h2>
                                <div> @Html.Raw(HttpUtility.HtmlDecode(@item.Description))</div>


                            </section>
                            <hr class="mt-5 mb-5" />
                        }
                    }

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.6/dist/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.js"></script>
</body>
</html>
