<div class="modal fade" id="AddSkill" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Add a Skill</h5>
      </div>
      <div class="modal-body">
       <div>
           <label class="form-label mt-3">Skill Name</label>
            <input type="text" class="form-control skill-name"/>
            <span class="text-danger d-none skill-name-empty">Skill Name Is Required</span>
       </div>
         <div>
              <label class="mt-3">
                            <input type="radio" name="skill-status" value="1" checked>
                            Active (1)
                        </label>
                        <label class="mt-3 ms-3">
                            <input type="radio" name="skill-status" value="0">
                            In-Active (0)
                        </label>
              <span class="text-danger d-none skill-status-empty">skill Status Is Required</span>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn cancelbtn" onclick="ClearSkillModal()" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn submitbtn" onclick="AddSkill('Add')">Submit</button>
      </div>
    </div>
  </div>
</div>

