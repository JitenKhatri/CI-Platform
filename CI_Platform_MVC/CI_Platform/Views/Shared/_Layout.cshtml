@using System.Security.Claims
@using CI_Platform.DataAccess.Repository.IRepository

@inject IUnitOfWork MissionRepo
@{
    var avatar = User.FindFirst("Avatar")?.Value;
    long userId = long.Parse(User.FindFirst(ClaimTypes.Sid)?.Value);
    var notificationdata = MissionRepo.MissionRepository.GetNotificationData(userId);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CI_Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CI_Platform.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/loaders.css/0.1.2/loaders.min.css" integrity="sha512-/wqP/1981GNaKbX6JkJoPnMdfoatDQUrmWDt71GxVuaep3hqwoTVs05L3VlM11tvfdRBLQDrpKxoVUw9htIwZw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/css/landing.css" rel="stylesheet" />
    <script src="//cdn.ckeditor.com/4.21.0/basic/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
</head>
<body>
    <header>
        <div class="container-fluid p-0">
            <div class="row header">
                <div class="col d-flex flex-row justify-content-center">
                    <a asp-controller="Story" asp-action="Story" style="text-decoration:none;" class="mx-1 mx-sm-4">Stories</a>
                    <div class="dropdown">
                        <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            Policy <img src="~/images/drop-down.png" class="mx-2" />
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy"> Privacy policy</a></li>
                        </ul>
                    </div>
                    <div class="dropdown">
                        <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            Explore <img src="~/images/drop-down.png" class="mx-2" />
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#" onclick="sortby('TopThemes')"> Top Themes</a></li>
                            <li><a class="dropdown-item" href="#" onclick="sortby('MostRanked')"> Most Ranked</a></li>
                            <li><a class="dropdown-item" href="#" onclick="sortby('TopFavorites')"> Top Favorites</a></li>
                            <li><a class="dropdown-item" href="#" onclick="sortby('Random')"> Random</a></li>
                        </ul>
                    </div>
                    <div class="dropdown">
                        <button class="dropdown-toggle notification-bell" type="button" data-bs-toggle="dropdown">
                            <img src="~/images/bell.png" class="mx-2" />
                            @if (@notificationdata.Uncheckednotificationcount > 0)
                            {
                                <span class="badge">@notificationdata.Uncheckednotificationcount</span>
                            }


                        </button>
                        <ul class="dropdown-menu notifications" style="padding-left:0px; width:550px">
                            <li>
                                <div class="dropdown-item">
                                    <div class="d-flex flex-row justify-content-between">

                                        <img style="height:21px; width:21px;cursor:pointer" src="~/images/settings.png" onclick="ShowSettings()" alt="settings" />


                                        <p>Notification</p>
                                        <button type="button" class="add-btn" onclick="ClearNotifications(@userId)">Clear All</button>
                                    </div>
                                </div>
                            </li>
                            @if (notificationdata.Notifications.Count() > 0)
                            {


                                var yesterday = DateTime.Now.AddDays(-1).Date; // get yesterday's date
                                var oldNotifications = notificationdata.Notifications.Where(n => n.CreatedAt.Date < yesterday).ToList(); // filter notifications older than yesterday
                                var newNotifications = notificationdata.Notifications.Except(oldNotifications).ToList(); // remove old notifications from the new notifications list

                                @foreach (var notification in newNotifications)
                                {
                                    @if (notification.MissionId != null)
                                    {
                                        <li style="border: 1px solid #E8E8E8;">
                                            <a class="dropdown-item" href="/volunteering_mission/@notification.MissionId" onmousedown="ReadNotification(@notification.NotificationId)">
                                                <div class="d-flex flex-row justify-content-between">
                                                    <img style="height:32px; width:32px" src=@notification.UserAvatar alt="add" />
                                                    <p class="mx-2 text-start" style="white-space:break-spaces;">@notification.Message</p>
                                                    @if (@notification.Status == "SEEN")
                                                    {
                                                        <i id="notification-@notification.NotificationId" class="bi bi-check-circle"></i>
                                                    }
                                                    else
                                                    {
                                                        <i id="notification-@notification.NotificationId" class="bi bi-circle-fill text-warning"></i>
                                                    }
                                                </div>
                                            </a>
                                        </li>

                                    }
                                    else if (notification.StoryId != null)
                                    {
                                        <li style="border: 1px solid #E8E8E8;">
                                            <a class="dropdown-item" href="/Story/StoryDetail/@notification.StoryId" onmousedown="ReadNotification(@notification.NotificationId)">
                                                <div class="d-flex flex-row justify-content-between">
                                                    <img style="height:32px; width:32px" src=@notification.UserAvatar alt="add" />
                                                    <p class="mx-2 text-start" style="white-space:break-spaces;">@notification.Message</p>
                                                    @if (@notification.Status == "SEEN")
                                                    {
                                                        <i id="notification-@notification.NotificationId" class="bi bi-check-circle"></i>
                                                    }
                                                    else
                                                    {
                                                        <i id="notification-@notification.NotificationId" class="bi bi-circle-fill text-warning"></i>
                                                    }
                                                </div>
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li style="border: 1px solid #E8E8E8;">
                                            <a class="dropdown-item" onmousedown="ReadNotification(@notification.NotificationId)">
                                                <div class="d-flex flex-row justify-content-between">
                                                    <img style="height:32px; width:32px" src=@notification.UserAvatar alt="add" />
                                                    <p class="mx-2 text-start" style="white-space:break-spaces;">@notification.Message</p>
                                                    @if (@notification.Status == "SEEN")
                                                    {
                                                        <i id="notification-@notification.NotificationId" class="bi bi-check-circle"></i>
                                                    }
                                                    else
                                                    {
                                                        <i id="notification-@notification.NotificationId" class="bi bi-circle-fill text-warning"></i>
                                                    }
                                                </div>
                                            </a>
                                        </li>
                                    }

                                }
                                @if (oldNotifications.Any())
                                {
                                    <li style="border:1px solid #E8E8E8; text-align:center;">Older Notifications</li>
                                    @foreach (var notification in oldNotifications)
                                    {
                                        @if (notification.MissionId != null)
                                        {
                                            <li style="border: 1px solid #E8E8E8;">
                                                <a class="dropdown-item" href="/volunteering_mission/@notification.MissionId" onmousedown="ReadNotification(@notification.NotificationId)">
                                                    <div class="d-flex flex-row justify-content-between">
                                                        <img style="height:32px; width:32px" src=@notification.UserAvatar alt="add" />
                                                        <p class="mx-2 text-start" style="white-space:break-spaces;">@notification.Message</p>
                                                        @if (@notification.Status == "SEEN")
                                                        {
                                                            <i id="notification-@notification.NotificationId" class="bi bi-check-circle"></i>
                                                        }
                                                        else
                                                        {
                                                            <i id="notification-@notification.NotificationId" class="bi bi-circle-fill text-warning"></i>
                                                        }
                                                    </div>
                                                </a>
                                            </li>

                                        }
                                        else if (notification.StoryId != null)
                                        {
                                            <li style="border: 1px solid #E8E8E8;">
                                                <a class="dropdown-item" href="/Story/StoryDetail/@notification.StoryId" onmousedown="ReadNotification(@notification.NotificationId)">
                                                    <div class="d-flex flex-row justify-content-between">
                                                        <img style="height:32px; width:32px" src=@notification.UserAvatar alt="add" />
                                                        <p class="mx-2 text-start" style="white-space:break-spaces;">@notification.Message</p>
                                                        @if (@notification.Status == "SEEN")
                                                        {
                                                            <i id="notification-@notification.NotificationId" class="bi bi-check-circle"></i>
                                                        }
                                                        else
                                                        {
                                                            <i id="notification-@notification.NotificationId" class="bi bi-circle-fill text-warning"></i>
                                                        }
                                                    </div>
                                                </a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li style="border: 1px solid #E8E8E8;">
                                                <a class="dropdown-item" onmousedown="ReadNotification(@notification.NotificationId)">
                                                    <div class="d-flex flex-row justify-content-between">
                                                        <img style="height:32px; width:32px" src=@notification.UserAvatar alt="add" />
                                                        <p class="mx-2 text-start" style="white-space:break-spaces;">@notification.Message</p>
                                                        @if (@notification.Status == "SEEN")
                                                        {
                                                            <i id="notification-@notification.NotificationId" class="bi bi-check-circle"></i>
                                                        }
                                                        else
                                                        {
                                                            <i id="notification-@notification.NotificationId" class="bi bi-circle-fill text-warning"></i>
                                                        }
                                                    </div>
                                                </a>
                                            </li>
                                        }
                                    }
                                }
                            }
                            else
                            {
                                <li>
                                    <div class="dropdown-item d-flex flex-column justify-content-center align-items-center">
                                        <img src="~/images/bell-big.png" style="height:80px; width:80px" alt="notification-bell" />
                                        <p>You do not have any new notifications</p>
                                    </div>
                                </li>
                            }
                        </ul>
                        <ul class="dropdown-menu notification-dropdown-menu d-none" id="notification-setting-menu" aria-labelledby="">
                            <li class="d-flex justify-content-center" style="border-bottom: 1px solid #aea8a8; padding-bottom: 10px;">
                                <a class="" disabled>Notification Settings</a>
                            </li>
                            <li class="d-flex justify-content-between align-items-center" style="background:#aea8a8;">
                                <a class="dropdown-item">Get Notification For</a>
                            </li>

                            @foreach (var setting in notificationdata.NotificationSettings)
                            {
                                // check if there is a corresponding UserNotificationSetting for this NotificationSetting
                                var usersetting = notificationdata.UserNotificationSettings.FirstOrDefault(x => x.NotificationSettingId == setting.NotificationSettingId);

                                <li class="d-flex justify-content-between align-items-center">
                                    <a class="dropdown-item">@setting.NotificationSettingName</a>

                                    @if (usersetting != null)
                                    {
                                        <input class="form-check-input checkbox-item" value="@setting.NotificationSettingId" type="checkbox" id="@setting.NotificationSettingId" name="option1" style="margin-right: 10px;" checked onchange="updateCheckedIds(this)">
                                    }
                                    else
                                    {
                                        <input class="form-check-input checkbox-item" value="@setting.NotificationSettingId" type="checkbox" id="@setting.NotificationSettingId" name="option1" style="margin-right: 10px;" onchange="updateCheckedIds(this)">
                                    }
                                </li>
                            }

                            <li class="d-flex justify-content-center align-items-center pt-3" style="border-top: 1px solid #aea8a8;">
                                <button class="btn add-btn me-2" id="saveButton" onclick="SaveNotificationSetting(@userId)">Save</button>
                                <button class="btn cancelbtn ms-2" onclick="HideSettings()">Cancel</button>
                            </li>


                        </ul>
                    </div>
                </div>
                <div class="col p-0">
                    <div class="dropdown">
                        <button class="dropdown-toggle profile"
                                type="button"
                                data-bs-toggle="dropdown">
                            <img src=@avatar class="profileimg" />
                            <span class="mx-2 d-none d-sm-block">@Context.User.Identity.Name</span>
                            <img src="~/images/drop-down.png"
                                 class="mx-1 drop-down d-none d-sm-block" />
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="UserAuthentication" asp-action="EditProfile">My Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Mission" asp-action="Index">Dashboard</a></li>
                            <li><a class="dropdown-item" asp-controller="Mission" asp-action="Volunteering_Timesheet">Timesheet</a></li>
                            <li><a class="dropdown-item" asp-controller="UserAuthentication" asp-action="Logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
            <div class="loader d-none">
                <center>
                    <img class="loading-image" src="~/images/Filled fading balls.gif" alt="loading..">
                </center>
            </div>
        </main>
    </div>

    <footer style="position:fixed;">
        <a class="text-muted" style="    margin-left: 10%;
    text-decoration: none;" asp-controller="Home" asp-action="Privacy"> Privacy policy</a>
        <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#contact-us-model"> Contact Us</button>
    </footer>

    <div class="modal fade" id="contact-us-model" tabindex="-1" role="dialog" aria-labelledby="contact-us-model-label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="change-password-modal-label">Contact Us</h5>
                    <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close">
                        <img src="~/images/Forma 1.png" />
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group mb-3">
                        <label for="contact-name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="contact-name" placeholder="Name" value="@base.User.Identity.Name" disabled>

                    </div>
                    <div class="form-group mb-3">
                        <label for="contact-email" class="form-label">Email Address</label>
                        @{
                            string userEmail = ((ClaimsIdentity)User.Identity).FindFirst(ClaimTypes.Email)?.Value;
                        }
                        <input type="email" class="form-control" id="contact-email" placeholder="Email Address" value="@userEmail" disabled>
                    </div>
                    <div class="form-group mb-3">
                        <label for="contact-subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="contact-subject" placeholder="Subject">
                    </div>
                    <div class="form-group mb-3">
                        <label for="contact-message" class="form-label">Message</label>
                        <input type="text" class="form-control" id="contact-message" placeholder="Message">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="submitbtn" onclick="contactUs()">Save</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.6/dist/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js" integrity="sha512-57oZ/vW8ANMjR/KQ6Be9v/+/h6bq9/l3f0Oc7vn6qMqyhvPd1cvKBRWWpzu0QoneImqr2SkmO4MSqU+RpHom3Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
