<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CI-platform</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div class="container-fluid g-0">
        <div class="row login">
            <div class="col-lg-8">
                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
                    <div class="carousel-indicators">
                        @{
                            int count = 0;
                            @foreach (var item in ViewBag.banners)
                            {
                                @if (count == 0)
                                {
                                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0"
                                    class="active" aria-current="true" aria-label="Slide @count"></button>
                                    count++;
                                }
                                else
                                {
                                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@count"
                                    aria-label="Slide @count"></button>
                                    count++;
                                }

                            }
                        }


                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                                aria-label="Slide 3"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3"
                                aria-label="Slide 4"></button>
                    </div>
                    <div class="carousel-inner">
                        @{
                            int imgcount = 0;
                            @foreach (var item in ViewBag.banners)
                            {
                                @if (imgcount == 0)
                                {
                                    <div class="carousel-item active">
                                        <img src="@item.BannerImagePath"
                                     class="d-block w-100 img-fluid login-img" alt="login-image" />
                                        <div class="carousel-caption d-md-block">
                                            <p>
                                                @item.BannerText
                                            </p>
                                        </div>
                                    </div>
                                    imgcount++;
                                }
                                else
                                {
                                    <div class="carousel-item">
                                        <img src="@item.BannerImagePath" class="d-block w-100 login-img img-fluid" alt="login-image" />
                                        <div class="carousel-caption d-md-block">
                                            <p>
                                                @item.BannerText

                                            </p>
                                        </div>
                                    </div>
                                    imgcount++;
                                }
                            }
                        }




                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-lg-4 d-flex flex-column">

                @RenderBody()


                <div class="privacypolicy"><a class="link mt-5" href="#" style="text-decoration: none">Privacy Policy</a></div>
            </div>
        </div>
    </div>


    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js" integrity="sha512-57oZ/vW8ANMjR/KQ6Be9v/+/h6bq9/l3f0Oc7vn6qMqyhvPd1cvKBRWWpzu0QoneImqr2SkmO4MSqU+RpHom3Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/UserAuthentication.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>